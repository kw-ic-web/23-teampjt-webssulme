<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.web.mapper.Mapper">

    <!-- 로그인 -->
    <select id="loginCheck" resultType="com.example.web.model.loginModel">
        select nickname, pw
        from user
        where nickname=#{nickname} and pw=#{pw};
    </select>


    <!-- 회원가입 -->
    <select id="getLoginIdList" resultType="String">
        select nickname
        from user
        where nickname=#{nickname};
    </select>

    <insert id="insertUser">
        INSERT INTO user (nickname, pw)
        VALUES (#{nickname}, #{pw});
    </insert>

    <!-- 자유게시판 -->
    <select id="getFreeBoardList" resultType="com.example.web.model.freeBoardModel">
        select *
        from free_board;
    </select>

    <insert id="insertFreeBoardNewContent">
        insert into free_board (user_nickname, title, content)
        values (#{user_nickname}, #{title}, #{content});
    </insert>

    <select id="getMyFreeBoardContentList" resultType="com.example.web.model.freeBoardModel">
        select *
        from free_board
        where user_nickname=#{user_nickname};
    </select>
</mapper>